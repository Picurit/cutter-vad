# Environment variables for VAD WebSocket Server
# Copy this file to .env and modify as needed

# =============================================================================
# Server Configuration
# =============================================================================

# Port for the VAD WebSocket server
VAD_PORT=8000

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Nginx ports (only used with production profile)
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# VAD Default Configuration
# These are defaults that can be overridden per WebSocket connection
# =============================================================================

# Audio configuration
VAD_DEFAULT_SAMPLE_RATE=16000
VAD_DEFAULT_CHANNELS=1

# VAD detection parameters
VAD_DEFAULT_START_PROBABILITY=0.4
VAD_DEFAULT_END_PROBABILITY=0.3
VAD_DEFAULT_START_FRAME_COUNT=6
VAD_DEFAULT_END_FRAME_COUNT=12

# =============================================================================
# Performance Tuning
# =============================================================================

# Number of threads for PyTorch operations
TORCH_NUM_THREADS=2

# Number of threads for OpenMP operations
OMP_NUM_THREADS=2

# Number of threads for Intel MKL operations
MKL_NUM_THREADS=2

# =============================================================================
# Docker Compose Profiles
# Available profiles:
# - default: Only runs the VAD server
# - production: Runs VAD server + Nginx reverse proxy
# =============================================================================
